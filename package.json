{
  "name": "@nlib/githooks",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.1.0",
  "license": "Apache-2.0",
  "author": {
    "name": "Kei Ito",
    "email": "kei.itof@gmail.com",
    "url": "https://github.com/gjbkz"
  },
  "homepage": "https://github.com/nlibjs/githooks",
  "repository": "https://github.com/nlibjs/githooks",
  "engines": {
    "node": ">=12"
  },
  "main": "./cjs/index.cjs",
  "bin": "./index.cjs",
  "files": [
    "index.cjs",
    "cjs"
  ],
  "scripts": {
    "postinstall": "node index.cjs enable",
    "build": "run-s build:*",
    "build:tsc": "tsc --project tsconfig.build.json",
    "build:enable": "node cjs/githooks.js enable",
    "lint": "eslint src",
    "test": "run-s test:*",
    "test:type": "tsc --noEmit",
    "test:ava": "ava",
    "postversion": "run-s postversion:*",
    "postversion:changelog": "nlib-changelog --output CHANGELOG.md",
    "postversion:add": "git add .",
    "postversion:amend": "git commit -m \"$(git log -1 --format=%s)\" --amend"
  },
  "devDependencies": {
    "@nlib/changelog": "0.3.0",
    "@nlib/eslint-config": "3.20.1",
    "@types/node": "20.5.1",
    "@typescript-eslint/eslint-plugin": "6.4.1",
    "@typescript-eslint/parser": "6.4.1",
    "ava": "5.3.1",
    "eslint": "8.47.0",
    "lint-staged": "14.0.1",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.2",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  },
  "eslintConfig": {
    "extends": [
      "@nlib/eslint-config"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "@nlib/no-globals": "off"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "lib/**/*.test.*(m|c)+(j|t)s*(x)"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.*(m|c)+(j|t)s*(x)": "eslint"
  },
  "renovate": {
    "extends": [
      "github>nlibjs/renovate-config"
    ]
  }
}
