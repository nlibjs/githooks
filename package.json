{
    "name": "@nlib/githooks",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.1.0",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/gjbkz"
    },
    "homepage": "https://github.com/nlibjs/githooks",
    "repository": "https://github.com/nlibjs/githooks",
    "engines": {
        "node": ">=12"
    },
    "main": "./cjs/index.cjs",
    "bin": "./index.cjs",
    "files": [
        "index.cjs",
        "cjs"
    ],
    "scripts": {
        "postinstall": "node index.cjs enable",
        "build": "run-s build:*",
        "build:tsc": "tsc --project tsconfig.build.json",
        "build:enable": "node cjs/githooks.js enable",
        "lint": "eslint src",
        "test": "run-s test:*",
        "test:type": "tsc --noEmit",
        "test:ava": "ava",
        "version": "run-s version:changelog version:add",
        "version:changelog": "npx @nlib/changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "devDependencies": {
        "@nlib/eslint-config": "3.17.28",
        "@types/node": "20.5.1",
        "@typescript-eslint/eslint-plugin": "4.33.0",
        "@typescript-eslint/parser": "4.33.0",
        "ava": "5.3.1",
        "eslint": "7.32.0",
        "lint-staged": "11.2.6",
        "npm-run-all": "4.1.5",
        "ts-node": "10.9.1",
        "typescript": "4.8.4"
    },
    "eslintConfig": {
        "extends": [
            "@nlib/eslint-config"
        ],
        "env": {
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        }
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "./src/**/*.test.ts"
        ]
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
