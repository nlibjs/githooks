{
    "name": "@nlib/githooks",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.0.0",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/githooks",
    "repository": "https://github.com/nlibjs/githooks",
    "engines": {
        "node": ">=12"
    },
    "main": "./index.js",
    "bin": "cjs/githooks.js",
    "files": [
        "cjs"
    ],
    "scripts": {
        "postinstall": "node ./cjs/githooks.js enable",
        "disable": "node ./cjs/githooks.js disable",
        "build": "tsc",
        "lint": "eslint src",
        "test": "run-s build test:*",
        "test:ava": "ava './lib/**/*.test.js'",
        "test:type": "tsc --noEmit",
        "version": "run-s version:changelog version:add",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "devDependencies": {
        "@nlib/changelog": "0.1.9",
        "@nlib/eslint-config": "3.17.20",
        "@nlib/lint-commit": "0.1.3",
        "@nlib/test": "3.18.6",
        "@types/node": "14.14.34",
        "@typescript-eslint/eslint-plugin": "4.17.0",
        "@typescript-eslint/parser": "4.17.0",
        "ava": "3.15.0",
        "eslint": "7.22.0",
        "lint-staged": "10.5.4",
        "npm-run-all": "4.1.5",
        "ts-node": "9.1.1",
        "typescript": "4.2.3"
    },
    "eslintConfig": {
        "extends": [
            "@nlib"
        ],
        "env": {
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
