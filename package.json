{
    "name": "@nlib/githooks",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.0.0",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/githooks",
    "repository": "https://github.com/nlibjs/githooks",
    "engines": {
        "node": ">=12"
    },
    "main": "./index.js",
    "exports": {
        ".": "./index.js",
        "./package.json": "./package.json"
    },
    "files": [
        "index.js",
        "index.d.ts"
    ],
    "scripts": {
        "build": "tsc",
        "test": "run-s build test:*",
        "test:ava": "ava './lib/**/*.test.js'",
        "test:type": "tsc --noEmit",
        "version": "run-s version:changelog version:add",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "peerDependencies": {
        "eslint": ">= 3"
    },
    "devDependencies": {
        "@nlib/changelog": "0.1.9",
        "@nlib/eslint-config": "3.17.18",
        "@nlib/lint-commit": "0.1.3",
        "@typescript-eslint/eslint-plugin": "4.15.0",
        "@typescript-eslint/parser": "4.15.0",
        "eslint": "7.19.0",
        "npm-run-all": "4.1.5",
        "typescript": "4.1.5"
    },
    "husky": {
        "hooks": {
            "commit-msg": "nlib-lint-commit --input HUSKY_GIT_PARAMS"
        }
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
