{
    "name": "@nlib/githooks",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.0.5",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/githooks",
    "repository": "https://github.com/nlibjs/githooks",
    "engines": {
        "node": ">=12"
    },
    "main": "./index.js",
    "bin": "cjs/githooks.js",
    "files": [
        "cjs"
    ],
    "scripts": {
        "postinstall": "githooks enable",
        "preuninstall": "githooks disable",
        "build": "run-s build:*",
        "build:tsc": "tsc --project tsconfig.build.json",
        "build:enable": "node cjs/githooks.js enable",
        "lint": "eslint src",
        "test": "run-s test:*",
        "test:type": "tsc --noEmit",
        "test:ava": "ava",
        "version": "run-s version:changelog version:add",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "devDependencies": {
        "@nlib/changelog": "0.1.9",
        "@nlib/eslint-config": "3.17.22",
        "@nlib/lint-commit": "0.1.4",
        "@nlib/nodetool": "0.1.17",
        "@nlib/test": "3.18.7",
        "@types/node": "15.0.2",
        "@typescript-eslint/eslint-plugin": "4.23.0",
        "@typescript-eslint/parser": "4.23.0",
        "ava": "3.15.0",
        "eslint": "7.26.0",
        "lint-staged": "11.0.0",
        "npm-run-all": "4.1.5",
        "ts-node": "9.1.1",
        "typescript": "4.2.4"
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
