{
	"name": "@nlib/githooks",
	"publishConfig": {
		"access": "public"
	},
	"version": "0.2.0",
	"license": "Apache-2.0",
	"author": {
		"name": "Kei Ito",
		"email": "kei.itof@gmail.com",
		"url": "https://github.com/gjbkz"
	},
	"homepage": "https://github.com/nlibjs/githooks",
	"repository": "https://github.com/nlibjs/githooks",
	"engines": {
		"node": ">=16"
	},
	"main": "./esm/cli.mjs",
	"bin": "./esm/cli.mjs",
	"files": ["esm", "!**/*.test.*"],
	"scripts": {
		"postinstall": "node esm/cli.mjs enable",
		"build": "tsc",
		"lint": "biome lint",
		"test": "run-s build test:*",
		"test:unit": "ava",
		"version": "npx @nlib/changelog --output CHANGELOG.md && git add CHANGELOG.md"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.3",
		"@types/node": "20.12.4",
		"ava": "5.3.1",
		"npm-run-all": "4.1.5",
		"typescript": "5.4.4"
	},
	"ava": {
		"files": ["esm/**/*.test.*(m|c)+(j|t)s*(x)"]
	},
	"renovate": {
		"extends": ["github>nlibjs/renovate-config"]
	}
}
