{
    "ts-node": {
        "transpileOnly": true
    },
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "cjs"
    },
    "include": [
        "src/**/*.ts"
    ]
}
